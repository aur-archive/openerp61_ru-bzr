#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

DAEMON=openerp-server
NAME="OpenERP Server daemon"

[ -r /etc/conf.d/$DAEMON ] && . /etc/conf.d/$DAEMON

PID=`pgrep -u $USER -f $DAEMON`

case "$1" in
 start)
   stat_busy "Starting $NAME"
   [ -z "$PID" ] && /bin/su - $USER -c "$DAEMON $ARGS &"
   if [ $? = 0 ]; then
     add_daemon $DAEMON
     stat_done
   else
     stat_fail
     exit 1
   fi
   ;;
 stop)
   stat_busy "Stopping $NAME"
   [ -n "$PID" ] && kill $PID &>/dev/null
   if [ $? = 0 ]; then
     rm_daemon $DAEMON
     stat_done
   else
     stat_fail
     exit 1
   fi
   ;;
 restart)
   $0 stop
   sleep 1
   $0 start
   ;;
 status)
   stat_busy "Checking $NAME status";
   ck_status $DAEMON
   ;;
 *)
   echo "usage: $0 {start|stop|restart|status}"  
esac
